package tp;
import java.util.Scanner;

public class comparaison {
    public static void main(String[] args) {
        int nombre = 10;

        Scanner scanner = new Scanner(System.in);
        System.out.print("Entrez le deuxième nombre : ");
        int deuxiemeNombre = scanner.nextInt();

        if (nombre > deuxiemeNombre) {
            System.out.println("Le premier nombre est supérieur au deuxième nombre.");
        } else if (nombre < deuxiemeNombre) {
            System.out.println("Le premier nombre est inférieur au deuxième nombre.");
        } else {
            System.out.println("Les deux nombres sont égaux.");
        }
    }
}
